<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.MenuThemes"
             Title="Menu"
             BackgroundColor="{DynamicResource PrimaryColor}">

    <Grid Padding="1" RowSpacing="1" ColumnSpacing="1"
          RowDefinitions="*,*,*,*,*"
          ColumnDefinitions="*">



        <Button Text="Light" Grid.Row="1" Grid.Column="0" TextColor="Black" BackgroundColor="White"
              BorderWidth="3" WidthRequest="200" HeightRequest="50" Clicked="LightTheme" />
        <Button Text="Dark" Grid.Row="2" Grid.Column="0" TextColor="White"
                BorderWidth="3" BackgroundColor="Black" WidthRequest="200" HeightRequest="50" Clicked="DarkTheme"/>
        <Button Text="Green" Grid.Row="3" Grid.Column="0" TextColor="Yellow"
                BorderWidth="3" BackgroundColor="Green" WidthRequest="200" HeightRequest="50" Clicked="GreenTheme"/>
        <Button Text="Pink" Grid.Row="4" Grid.Column="0" TextColor="Black"
               BorderWidth="3"    BackgroundColor="Pink" WidthRequest="200" HeightRequest="50" Clicked="PinkTheme"/>

    </Grid>

</ContentPage>